{
  "rules": {
    "indent": [
      2,
      4
    ],
    "quotes": [
      2,
      "double"
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "semi": [
      2,
      "always"
    ],
    "complexity": [
      "error",
      20
    ],
    "max-depth": [
      1,
      {
        "max": 4
      }
    ],
    "max-len": [
      1,
      {
        "code": 140
      }
    ],
    "max-nested-callbacks": [
      1,
      {
        "max": 3
      }
    ],
    "max-params": [
      1,
      {
        "max": 4
      }
    ],
    "max-statements": [
      1,
      {
        "max": 10
      }
    ],
    "max-statements-per-line": [
      1,
      {
        "max": 1
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "extends": "react-app"
}